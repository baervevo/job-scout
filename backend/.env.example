# JobScout Backend Environment Configuration
# Copy this file to .env and update the values according to your setup

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=jobscout
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Backend server settings
APP_HOST=127.0.0.1
APP_PORT=8080

# File storage directory for uploaded resumes
# Make sure this directory exists and has proper write permissions
RESUME_DIR=/path/to/resume/storage

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Jooble API key for job data scraping
# Sign up at https://jooble.org/api/about to get your API key
JOOBLE_API_KEY=your_jooble_api_key_here

# =============================================================================
# AI/ML CONFIGURATION (Optional)
# =============================================================================
# Ollama model settings for enhanced keyword extraction
# Leave empty to use fallback keyword extraction
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================
# Session secret key for enhanced security (auto-generated if not provided)
# SECRET_KEY=your_secret_key_here

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================
# Set to true for development mode with hot reload
DEBUG=false

# CORS origins for frontend access (comma-separated)
CORS_ORIGINS=http://localhost:8081,http://127.0.0.1:8081